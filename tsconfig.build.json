{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "rootDir": "./src",
    "module": "commonjs",
    "target": "ES2019",
    "sourceMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "lib"],
  "include": ["src/**/*"]
}
